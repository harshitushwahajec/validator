{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {

        "root_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "app\\app_logs\\app.log",
            "maxBytes": 524288, // 512KB
            "backupCount": 10,
            "encoding": "utf8"
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": [ "root_file_handler"]
    }
}